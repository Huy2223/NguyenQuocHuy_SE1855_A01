<Window x:Class="NguyenQuocHuy_SE193304_ASM01.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenQuocHuy_SE193304_ASM01"
        mc:Ignorable="d"
        Title="Login - Sales Management System" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f5f5f5">
    <Window.Resources>
        <!-- Styles for controls -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3F51B5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#303F9F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1A237E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="TabButtonStyle" TargetType="RadioButton">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="BorderBrush" Value="#3F51B5"/>
                                <Setter Property="Foreground" Value="#3F51B5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Two column layout: Left side image/decoration, Right side login form -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left side panel -->
        <Border Grid.Column="0" Background="#3F51B5">
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Brand/Logo placeholder -->
                    <Ellipse Width="100" Height="100" Fill="White" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="SALES MANAGEMENT" 
                               FontSize="26" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="SYSTEM" 
                               FontSize="26" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <TextBlock Text="Welcome back!" 
                               FontSize="18" 
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Please log in to your account" 
                               FontSize="14" 
                               Foreground="#E1E2F6" HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Bottom decoration -->
                <TextBlock Text="© 2023 Sales Management System" 
                           Foreground="#C5CAE9" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,20"
                           FontSize="12"/>
            </Grid>
        </Border>
        
        <!-- Right side login form -->
        <Border Grid.Column="1" Background="White">
            <Border Width="380" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Login to Your Account" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#212121"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <!-- Login type selector -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <RadioButton x:Name="rbEmployee" Content="Employee" 
                                     GroupName="LoginType" 
                                     Grid.Column="0"
                                     Style="{StaticResource TabButtonStyle}"
                                     IsChecked="True" 
                                     Checked="RbEmployee_Checked"/>
                        
                        <RadioButton x:Name="rbCustomer" Content="Customer" 
                                     GroupName="LoginType" 
                                     Grid.Column="1"
                                     Style="{StaticResource TabButtonStyle}"
                                     Checked="RbCustomer_Checked"/>
                    </Grid>
                    
                    <!-- Employee Login Panel -->
                    <StackPanel x:Name="EmployeeLoginPanel" Visibility="Visible">
                        <!-- Username field -->
                        <TextBlock Text="Username" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtUsername" 
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,20"/>
                        
                        <!-- Password field -->
                        <TextBlock Text="Password" 
                                   Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Style="{StaticResource PasswordBoxStyle}"
                                     Margin="0,0,0,15"/>
                        
                        <!-- Employee Login button -->
                        <Button x:Name="btnEmployeeLogin" 
                                Content="LOGIN" 
                                Style="{StaticResource ButtonStyle}"
                                Margin="0,15,0,0"
                                Width="380"
                                Click="BtnEmployeeLogin_Click"/>
                    </StackPanel>
                    
                    <!-- Customer Login Panel -->
                    <StackPanel x:Name="CustomerLoginPanel" Visibility="Collapsed">
                        <!-- Phone field -->
                        <TextBlock Text="Phone Number (10 digits)" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="txtPhone" 
                                 Style="{StaticResource TextBoxStyle}"
                                 Margin="0,0,0,15"
                                 MaxLength="10"
                                 PreviewTextInput="TxtPhone_PreviewTextInput"/>
                        
                        <TextBlock Text="Example: 5551234567 (no spaces or dashes)" 
                                   FontSize="12" 
                                   Foreground="#757575"
                                   Margin="0,0,0,20"/>
                        
                        <!-- Customer Login button -->
                        <Button x:Name="btnCustomerLogin" 
                                Content="LOGIN AS CUSTOMER" 
                                Style="{StaticResource ButtonStyle}"
                                Background="#4CAF50"
                                Margin="0,15,0,0"
                                Width="380"
                                Click="BtnCustomerLogin_Click"/>
                    </StackPanel>
                    
                    <!-- Error message -->
                    <TextBlock x:Name="txtError" 
                               Foreground="#F44336" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"
                               Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
